{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs", 
        "strict": true,
        "outDir": "lib",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictBindCallApply": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noImplicitReturns": true,
        "esModuleInterop": true,
        "declaration": true,
        "lib": [
            "es5",
            "es2017"
        ]
    }
}
